include ../../../assets/jade/assets.jade

link(rel="stylesheet",type="text/css",href="/tasks/css/eventlist.css")

script(src="/tasks/client_js/tasks.js")

.container
    include ../../../general/navigation/jade/nav.jade
    .row
      .col-md-12
        .page.header
          h1 Appontments
        .btn-toolbar(style="margin-bottom:15px")
          .btn-group
            #refresh(data-bind="click: refresh").btn.btn-default 
              span.fa.fa-refresh
            #refresh(data-toggle='modal', data-target='#myModal').btn.btn-default 
              span.fa.fa-plus
      .col-md-4
        ul(data-bind="foreach: appointments").event-list
          li(data-bind="click: $root.goToAppointment")
            time
              span(data-bind="text: date").day
              span(data-bind="text: month").month
              span(data-bind="text: time").time
            .info
              h2(data-bind="text: title").title
              p(data-bind="text: desc").desc    
      .col-md-8
        div.event-display
          p(data-bind="text: fullDate").text-right
          div(data-bind="html: information")
          
          
#myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
  .modal-dialog
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal')
          span(aria-hidden='true') Ã—
          span.sr-only Close
        h4#myModalLabel.modal-title Modal title
      .modal-body
        form.form-horizontal(role='form')
          .form-group
            label.col-sm-2.control-label(for='date') Date
            .col-sm-10
              input#date.form-control(data-bind="val: newappointmentdate", type='text', placeholder='Email')
          .form-group
            label.col-sm-2.control-label(for='time') Time
            .col-sm-10
              input#time.form-control(type='text', placeholder='Password')
          .form-group
            label.col-sm-2.control-label(for='title') Title
            .col-sm-10
              input#title.form-control(type='text', placeholder='Password')
          .form-group
            label.col-sm-2.control-label(for='description') Description
            .col-sm-10
              textarea#description.form-control(type='text', placeholder='Password')
          .form-group
            label.col-sm-2.control-label(for='description') Information
            .col-sm-10
              textarea#description.form-control(type='text', placeholder='Password')
      
      .modal-footer
        button.btn.btn-default(type='button', data-dismiss='modal') Close
        button.btn.btn-primary(type='button') Save changes